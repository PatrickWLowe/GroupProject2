<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="./css/homepage.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="./js/login.js"></script>

<div class="row">
  <div class="column-1">
    <div class="row">
      <div class="text-center p-5 bg-light">
        <h1 class="display-4">Let's go!<img src="https://cdn-icons-png.flaticon.com/512/3967/3967391.png"
            alt="food pyramid"></img></h1>
        <h4 class="mt-4">Login</h4>

        <form class="form login-form">
          <div class="form-group">
            <label for="email-login">email:</label>
            <input class="form-input" type="text" id="email-login" />
          </div>
          <div class="form-group">
            <label for="password-login">password:</label>
            <input class="form-input" type="password" id="password-login" />
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-lg mt-4" type="submit">login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="column-2 bg-light">
    <div class="container">
      <div class="center">
        <section class="startSignUp" id="startSignUp">
          <button class="signupButton">Don't have an account?</button>
        </section>
      </div>
      <section class="signupPortal text-center p-5 mb-4 bg-light" id="signup-portal" style="display: none;">
        <div class=" col-md-6">
          <h1 class="display-4">Let's get started!</h1>
          <h4>Signup below</h4>

          <form class="form signup-form">
            <div class="form-group">
              <label for="name-signup">name:</label>
              <input class="form-input" type="text" id="name-signup" />
            </div>
            <div class="form-group">
              <label for="email-signup">email:</label>
              <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="form-group">
              <label for="password-signup">password:</label>
              <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group">
              <button class="btn btn-primary btn-lg mt-4" type="submit">Enter</button>
            </div>
          </form>
      </section>
    </div>
  </div>
</div>

</html>
